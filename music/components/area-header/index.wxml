<!--components/area-header/index.wxml-->
<view class="header">
  <view class="title" >{{title}}</view>
  <view class="right">
    <view class="slot"><slot></slot></view>
    <view class="default" bindtap="rightClick" wx:if="{{showRight}}">
      <text>{{rightText}}</text>
      <image src="/assets/images/icons/arrow-right.png" class="image"></image>
    </view>
  </view>
</view>
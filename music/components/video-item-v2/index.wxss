/* components/video-item-v2/index.wxss */

.item {
  display: flex;
  margin: 10rpx 0rpx;
}
.item .left {
  width: 280rpx;
  position: relative;
}

.item .left .img {
  width: 100%;
  border-radius: 10rpx;
}
.item .content {
  flex:1;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.item .playIcon {
  position: absolute;
  bottom: 15rpx;
  right: 15rpx;
  color: white;
}
.content .title {
  font-size: 30rpx;
  font-weight: bold;

  /* 显示两行 */
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  display: -moz-box;
  -moz-line-clamp: 2;
  -moz-box-orient: vertical;
  word-wrap: break-word;
  word-break: break-all;
  white-space: normal;
  overflow: hidden;
}
.content .user {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: gray;
}